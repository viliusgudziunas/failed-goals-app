{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "airbnb", "prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error"
  },
  "overrides": [
    {
      "files": ["*.spec.js"],
      "globals": {
        "describe": "writable",
        "it": "writable",
        "cy": "writable",
        "beforeEach": "writable"
      }
    }
  ]
}
